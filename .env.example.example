# Django Settings
SECRET_KEY=django-insecure-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,*.onrender.com,*.yourdomain.com

# Database (Render PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database_name

# CORS (Your Vue.js Frontend URLs)
CORS_ALLOWED_ORIGINS=https://your-frontend.onrender.com,http://localhost:5173
CORS_ALLOW_CREDENTIALS=True

# Redis (Render Redis)
REDIS_URL=rediss://red-xxxxxxxxxxxx:6379

# Celery
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# JWT
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# Email (For Production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@crmapp.com

# Security (For Production)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True